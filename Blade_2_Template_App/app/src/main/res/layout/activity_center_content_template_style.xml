<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".center_content_template_activity">

    <!-- Like any Android Application, you will need a Layout to define your UI and real state for
    display information. -->
    <!--Center Lock style means that the View or real-state available is in the center and its lock
    to that position. The Action menus move underneath the main UI.
     This is the simples and more common scenario-->

    <!-- 스마트 글래스에 보육 지역정보를 표시하는 레이아웃 -->
    <!-- 제목 텍스트 -->

    <!-- 메인 정보 표시 영역 -->
    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#33000000"
        android:padding="10dp">

        <!-- 아이콘 -->
        <ImageView
            android:id="@+id/section_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_environment"
            android:contentDescription="섹션 아이콘" />

        <!-- 정보 텍스트 -->
        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="2" />

    </LinearLayout>

</RelativeLayout>